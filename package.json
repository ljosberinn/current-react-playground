{
  "name": "next-karma",
  "version": "1.0.0",
  "scripts": {
    "analyze": "set ANALYZE=true&&yarn build",
    "build": "next build",
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "dev": "next",
    "lint:code": "eslint src --cache",
    "lint:code:fix": "eslint src --fix && prettier --write src",
    "lint:types": "tsc --noEmit",
    "start": "next start",
    "test": "jest",
    "postinstall": "yarn-deduplicate -l && husky install && node fix-react-package-json.js"
  },
  "dependencies": {
    "@chakra-ui/react": "1.7.4",
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0",
    "@sentry/integrations": "6.16.1",
    "@sentry/minimal": "6.16.1",
    "@sentry/node": "6.16.1",
    "@sentry/react": "6.16.1",
    "cookie": "0.4.1",
    "framer-motion": "5.6.0",
    "next": "12.0.9",
    "next-connect": "0.11.0",
    "react": "npm:react@next",
    "react-dom": "npm:react-dom@next",
    "react-icons": "4.3.1",
    "web-vitals": "2.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@commitlint/config-conventional": "16.0.0",
    "@next/bundle-analyzer": "12.0.8",
    "@next/env": "12.0.8",
    "@sentry/types": "6.16.1",
    "@sentry/webpack-plugin": "1.18.4",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "7.0.2",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.4.0",
    "@types/jest-axe": "3.5.3",
    "@types/node": "17.0.2",
    "@types/node-fetch": "2.5.12",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/test-listen": "1.1.0",
    "babel-jest": "27.4.6",
    "eslint": "8.6.0",
    "eslint-config-galex": "3.5.5",
    "html-validate": "6.1.6",
    "husky": "7.0.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.4.7",
    "jest-axe": "5.0.1",
    "jest-watch-typeahead": "1.0.0",
    "lint-staged": "12.3.2",
    "msw": "0.36.5",
    "next-compose-plugins": "2.2.1",
    "next-offline": "5.0.5",
    "node-fetch": "2.6.7",
    "prettier": "2.5.1",
    "react-test-renderer": "17.0.2",
    "test-listen": "1.1.0",
    "typescript": "4.5.5",
    "webpack": "5.68.0",
    "whatwg-fetch": "3.6.2",
    "yarn-deduplicate": "3.1.0"
  },
  "resolutions": {
    "webpack": "5.68.0"
  },
  "license": "MIT",
  "author": "Gerrit Alex",
  "hooks": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,tsx,ts,tsx,css,scss}": [
      "eslint --fix"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/jest/setupTests.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ],
      "^.+\\.css$": "<rootDir>/scripts/jest/cssTransform.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "modulePaths": [
      "<rootDir>"
    ],
    "coverageDirectory": "coverage",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true,
    "testEnvironment": "jsdom"
  }
}
